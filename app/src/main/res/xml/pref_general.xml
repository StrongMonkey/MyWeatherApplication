<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/Location_key"
        android:title="@string/Location_key"
        android:defaultValue="@string/default_location"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <ListPreference
        android:key="@string/temperature_units_key"
        android:title="@string/temperature_units_key"
        android:defaultValue="@string/default_unit"
        android:entries="@array/pref_unit_list_titles"
        android:entryValues="@array/pref_unit_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />


</PreferenceScreen>
